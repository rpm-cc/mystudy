
log4j.rootLogger = INFO,INFO_LOG


#INFO log
log4j.logger.INFO_LOG=INFO
log4j.appender.INFO_LOG = org.apache.log4j.DailyRollingFileAppender 
log4j.appender.INFO_LOG.Threshold = INFO
log4j.appender.INFO_LOG.append=true
#log4j.appender.INFO_LOG.File = /usr/local/logs/info.log
log4j.appender.INFO_LOG.File =/Users/rpm/Desktop/logs/info.log
log4j.appender.INFO_LOG.DatePattern='.'yyyy-MM-dd-HH'.log'
log4j.appender.INFO_LOG.layout = org.apache.log4j.PatternLayout
log4j.appender.INFO_LOG.layout.ConversionPattern = %d{yyyy-MM-dd HH:mm:ss}:%p %t %c - %m%n



